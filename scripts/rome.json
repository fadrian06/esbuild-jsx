{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "files": {
    "ignore": []
  },
  "vcs": {
    "clientKind": "git",
    "enabled": false,
    "root": "",
    "useIgnoreFile": true
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "ignore": [
      "node_modules"
    ],
    "indentSize": 2,
    "indentStyle": "space",
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "quoteProperties": "asNeeded",
      "quoteStyle": "single",
      "semicolons": "asNeeded",
      "trailingComma": "none"
    },
    "globals": [
      "isDevelopment",
      "LiveReloadChangeEvent"
    ]
  },
  "linter": {
    "enabled": true,
    "ignore": [
      "node_modules"
    ],
    "rules": {
      "all": true,
      "nursery": {
        "all": true
      }
    }
  },
  "organizeImports": {
    "enabled": false,
    "ignore": [
      "node_modules"
    ]
  }
}
